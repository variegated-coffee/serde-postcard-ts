{
  "name": "@variegated-coffee/serde-postcard-ts",
  "version": "0.1.1",
  "description": "TypeScript implementation of the postcard serialization format",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "generate-fixtures": "cd test-fixtures && cargo run --release",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run type-check && npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "postcard",
    "serde",
    "serialization",
    "deserialization",
    "binary",
    "encoding"
  ],
  "author": "Magnus Nordlander <magnus@variegated.coffee>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/variegated-coffee/serde-postcard-ts.git"
  },
  "bugs": {
    "url": "https://github.com/variegated-coffee/serde-postcard-ts/issues"
  },
  "homepage": "https://github.com/variegated-coffee/serde-postcard-ts#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.3.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
